@model ProjetoMVC.Models.Pessoa

@{
    ViewData["Title"] = "Criar nova pessoa";
}

<h1>Criar nova pessoa</h1>

<div class="row"> 
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="RG" class="control-label"></label>
                <input asp-for="RG" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="CriarPessoa" class="btn btn-primary" />
            </div>                                                
        </form>
    </div>
</div>
<hr>
<div class="form-group">
    <a asp-action="Index">Voltar</a>
</div>